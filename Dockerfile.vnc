# Dockerfile for VNC-enabled Job Application Agent
# Supports running visible browsers in cloud with VNC streaming

FROM python:3.11-slim

# Set working directory
WORKDIR /app

# Install system dependencies for virtual display and VNC
RUN apt-get update && apt-get install -y \
    # Virtual display
    xvfb \
    # VNC server
    x11vnc \
    # Browser dependencies
    wget \
    gnupg \
    ca-certificates \
    fonts-liberation \
    libasound2 \
    libatk-bridge2.0-0 \
    libatk1.0-0 \
    libatspi2.0-0 \
    libcups2 \
    libdbus-1-3 \
    libdrm2 \
    libgbm1 \
    libgtk-3-0 \
    libnspr4 \
    libnss3 \
    libxcomposite1 \
    libxdamage1 \
    libxfixes3 \
    libxkbcommon0 \
    libxrandr2 \
    xdg-utils \
    # Additional utilities
    procps \
    && rm -rf /var/lib/apt/lists/*

# Install Chromium for Playwright
RUN apt-get update && apt-get install -y \
    chromium \
    chromium-driver \
    && rm -rf /var/lib/apt/lists/*

# Copy requirements
COPY requirements_production.txt .
COPY requirements_vnc.txt .

# Install Python dependencies
RUN pip install --no-cache-dir -r requirements_production.txt
RUN pip install --no-cache-dir -r requirements_vnc.txt

# Install sudo and create restricted user for browser isolation
RUN apt-get update && apt-get install -y sudo firejail && rm -rf /var/lib/apt/lists/*

# Create restricted user
RUN useradd -m -d /home/restricted_user -s /bin/bash restricted_user

# Set up Desktop directory for file picker convenience
RUN mkdir -p /home/restricted_user/Desktop && \
    chown -R restricted_user:restricted_user /home/restricted_user

# Allow root to run browser as restricted_user without password
RUN echo "root ALL=(restricted_user) NOPASSWD: ALL" >> /etc/sudoers

# Create browser launcher wrapper
RUN echo '#!/bin/bash\n\
sudo -u restricted_user /usr/bin/chromium "$@"\n\
' > /usr/local/bin/browser_launcher.sh && \
    chmod +x /usr/local/bin/browser_launcher.sh

# Install Playwright browsers
RUN playwright install chromium
RUN playwright install-deps chromium

# Copy application code
COPY . .

# Restrict /app access (source code protection)
# Re-apply permissions after copying code so restricted_user cannot read it
RUN chmod 700 /app

# Set environment variables
ENV DISPLAY=:99
ENV PYTHONUNBUFFERED=1

# Expose ports
EXPOSE 5000
# VNC port
EXPOSE 5900

# Copy improved startup script
COPY start_vnc.sh /app/start_vnc.sh
RUN chmod +x /app/start_vnc.sh

# Health check - increased start period to allow for initialization
# Use both /health and /api/health for compatibility
HEALTHCHECK --interval=30s --timeout=10s --start-period=120s --retries=3 \
    CMD wget --no-verbose --tries=1 --spider http://localhost:5000/health || \
        wget --no-verbose --tries=1 --spider http://localhost:5000/api/health || exit 1

# Start script with VNC infrastructure
CMD ["/app/start_vnc.sh"]

